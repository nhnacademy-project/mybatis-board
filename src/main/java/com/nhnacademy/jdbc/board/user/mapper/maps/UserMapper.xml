<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nhnacademy.jdbc.board.user.mapper.UserMapper">

    <select id="loginUser" resultType="com.nhnacademy.jdbc.board.user.domain.User">
        select *
        from user
        where username = #{username} and password = #{password}
    </select>
    <select id="findModifierNameByUserNo" resultType="java.lang.String">
        select name
        from user
        where user_no = #{modifyUserNo}
    </select>
</mapper>
